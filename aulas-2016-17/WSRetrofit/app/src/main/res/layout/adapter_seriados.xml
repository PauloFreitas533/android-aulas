<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow2"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        card_view:cardElevation="4dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image_view_seriado"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:src="@drawable/noimage"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/text_view_nome_seriado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_view_seriado"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="How To Get Away With Murder"/>

            <TextView
                android:id="@+id/label_genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_nome_seriado"
                android:layout_alignLeft="@id/text_view_nome_seriado"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:text="GÃªnero:"/>

            <TextView
                android:id="@+id/label_periodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_genero"
                android:layout_alignLeft="@id/text_view_nome_seriado"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:text="Periodo:"/>

            <TextView
                android:id="@+id/text_view_genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/label_genero"
                android:layout_alignTop="@id/label_genero"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:text="Drama , Fantasia"/>

            <TextView
                android:id="@+id/text_view_periodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_genero"
                android:layout_alignLeft="@id/text_view_genero"
                android:layout_alignTop="@id/label_periodo"
                android:textSize="12sp"
                android:text="2011 - hoje"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>